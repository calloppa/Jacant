<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayout1"
		android:layout_marginBottom="5dip"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:layout_marginTop="5dip"
		<TextView
			android:id="@+id/LblCity"
			android:text="请输入城市:"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1" />
		<EditText
			android:id="@+id/TxtWeather"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:lines="1" />
	</LinearLayout>
	<TextView
		android:id="@+id/LblCityRst"
		android:text="城市:"
		android:layout_width="match_parent"
		android:layout_height="32.0dp"/>
	<TextView
		android:id="@+id/LabCurTempRst"
		android:text="当前温度:"
		android:layout_width="match_parent"
		android:layout_height="29.5dp"/>
	<TextView
		android:id="@+id/LabWeatherRst"
		android:text="天气:"
		android:layout_width="match_parent"
		android:layout_height="33.0dp"/>
	<TextView
		android:id="@+id/LabRangeRst"
		android:text="范围:"
		android:layout_width="match_parent"
		android:layout_height="32.5dp"/>
	<TextView
		android:id="@+id/LabUptTimeRst"
		android:text="更新时间:"
		android:layout_width="match_parent"
		android:layout_height="40.0dp"/>
	<Button
		android:id="@+id/MyButton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:lines="1"
		android:text="查询"
		android:layout_marginTop="1.0dp" />
</LinearLayout>